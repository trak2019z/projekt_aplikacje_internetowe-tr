<div class="container"><h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email,"Email" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :first_name,"Imie" %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :last_name,"Nazwisko" %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :address,"Adres" %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :phone_number,"Numer Telefonu" %><br />
      <%= f.text_field :phone_number, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password,"Hasło" %> <i>(Zostaw puste jeżeli nie zmieniasz hasła)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation,"Potwierdzenie hasła" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password,"Obecne hasło" %> <i></i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Wyślij" %>
    </div></br>
  <% end %>

  <%= link_to "Wstecz", :back %>
</div>